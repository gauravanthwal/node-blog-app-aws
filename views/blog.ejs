<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Blog</title>
    <%- include('./partials/head') %>
  </head>
  <body>
    <%- include('./partials/navbar') %>

    <div class="container mt-1">
      <div class="container-fluid" style="height: 400px">
        <img
          width="100%"
          height="100%"
          src="<%= blog.coverImageURL %>"
          alt="<%=blog.title %>"
        />
      </div>
      <h1 class="px-4"><%= blog.title %></h1>
      <pre class="px-4 fs-6" style="font-family: sans-serif">
      <%= blog.body %></pre
      >
    </div>

    <div class="container mt-4">
      <hr />
      <img
        width="40px"
        height="40px"
        src="<%= blog.createdBy.profileImageURL %>"
        alt="<%= blog.createdBy.profileImageURL %>"
      />
      <span><%= blog.createdBy.fullName %></span>
    </div>

    <div class="container mt-4">
      <p>Comments (<%=comments.length %>)</p>
      <% if(locals.user){ %>
      <form class="" action="/blog/comment/<%=blog._id%>" method="post">
        <div class="mb-1">
          <input
            type="text"
            class="form-control"
            id="comment"
            name="comment"
            placeholder="Enter your comment"
          />
        </div>
        <button class="btn btn-sm btn-primary">Add Comment</button>
      </form>
      <% } %>
    </div>

    <div class="container">
      <hr />
      <% if(locals.comments){ %> <% comments.forEach(comment=>{ %>
      <div class="">
        <img
          width="40px"
          height="40px"
          src="<%= comment.createdBy.profileImageURL %>"
          alt="<%= comment.createdBy.profileImageURL %>"
        />
        <span><%= comment.createdBy.fullName %></span>
        <pre style="font-family: sans-serif" class="fs-6">
        <%= comment.content %></pre
        >
      </div>
      <% }) %> <% } %>
    </div>

    <div class="mb-5"></div>
    <%- include('./partials/script') %>
  </body>
</html>
